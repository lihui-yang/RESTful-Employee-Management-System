<%- include('./partials/header.ejs') %>

<div class="container mt-5 newForm">
  <h1 class="display-4 pageHeader">Edit <%= employee.name %></h1>
  <hr />
  <form action="/employees/<%= employee._id %>?_method=PUT" method="POST">
    <div class="form-group mb-4">
      <label>Name</label>
      <input
        class="form-control"
        type="text"
        name="employee[name]"
        value="<%= employee.name%>"
      />
    </div>

    <div class="form-group mb-4">
      <label>Department</label>
      <input
        class="form-control"
        type="text"
        name="employee[department]"
        value="<%= employee.department%>"
      />
    </div>
    <div class="form-group mb-4">
      <label>Email</label>
      <input
        class="form-control"
        type="email"
        name="employee[email]"
        value="<%= employee.email%>"
      />
    </div>
    <div class="form-group mb-4">
      <label>Phone</label>
      <input
        class="form-control"
        type="text"
        name="employee[phone]"
        value="<%= employee.phone%>"
      />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<%- include('./partials/footer.ejs') %>
