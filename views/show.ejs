<%- include('./partials/header.ejs') %>

<div class="card bg-dark mx-auto mt-5" style="width: 30rem;">
  <div class="container">
    <div class="card-body">
      <h5 class="card-title">Name: <%= employee.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted">
        Hired on: <%= employee.created.toDateString() %>
      </h6>
      <p class="card-text">Department: <%= employee.department%></p>
      <p class="card-text">Email: <%= employee.email%></p>
      <p class="card-text">Phone: <%= employee.phone%></p>
      <a
        class="btn btn-outline-warning"
        href="/employees/<%= employee._id%>/edit"
        >Edit</a
      >
      <form
        id="delete"
        action="/employees/<%= employee._id%>?_method=DELETE"
        method="POST"
      >
        <button class="btn btn-outline-danger ml-3">Delete</button>
      </form>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
